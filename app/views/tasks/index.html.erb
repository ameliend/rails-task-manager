<h1>My tasks</h1>


<% @tasks.each do |task| %>
<p>
 <% if task.completed %>
 <i class="far fa-check-square"></i>
 <% else %>
 <i class="far fa-square"></i>
 <% end %>
 <%= link_to "#{task.title}", task_path(task) %>
 <%= link_to delete_path(task), method: :delete  do %>
    <i class="fas fa-trash"></i>
  <%end %></p>
<% end %>


<%= link_to "New", tasks_new_path, class: "btn btn-primary" %>



